@model PortfolioProject.Models.TblFeatures
@{
    ViewBag.Title = "UpdateFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-3">Update Feature</h3>

<form method="post">
    <input type="hidden" name="FeatureId" value="@Model.FeatureId" />
    <label>Resim URL</label>
    <input type="text" name="NameSurname" value="@Model.NameSurname" class="form-control" />
    <label>Başlık</label>
    <input type="text" name="Title" value="@Model.Title" class="form-control" />
    <label>Açıklama</label>
    <input type="text" name="ImageUrl" value="@Model.ImageUrl" class="form-control" />

    <button class="btn btn-outline-success mt-2">Güncelle</button>
</form>