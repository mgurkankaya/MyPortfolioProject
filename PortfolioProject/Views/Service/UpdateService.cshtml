@model PortfolioProject.Models.TblServices
@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-3">Update Service</h3>
<form method="post">
    <input type="hidden" name="ServiceId" value="@Model.ServiceId" />
    <label>Icon</label>
    <input type="text" name="Icon" value="@Model.Icon" class="form-control" />
    <label>Başlık</label>
    <input type="text" name="Title" value="@Model.Title" class="form-control" />
    <label>Açıklama</label>
    <input type="text" name="Description" value="@Model.Description" class="form-control" />

    <button class="btn btn-outline-success mt-2">Güncelle</button>
</form>
