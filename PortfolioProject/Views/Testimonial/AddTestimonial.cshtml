@model PortfolioProject.Models.TblTestimonials
@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3  class="mt-3">Add Testimonial</h3>

<form method="post">
    <label>Resim URL</label>
    <input type="text" name="ImageUrl" class="form-control" />

    <label>Yorum</label>
    <input type="text" name="Comment" class="form-control" />

    <label>Ad Soyad</label>
    <input type="text" name="NameSurname" class="form-control" />

    <label>Başlık</label>
    <input type="text" name="Title" class="form-control" />

    <label>Statü</label>
    <input type="text" name="Status" class="form-control" />

    <label>Yorum Tarihi</label>
    <input type="text" name="CommentDate" class="form-control" />

    <button class="btn btn-outline-primary mt-2">Kaydet</button>
</form>