@model List<PortfolioProject.Models.TblSocialMedias>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-3">Index</h3>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Social Media Name</th>
            <th>Url</th>
            <th>Icon</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>@item.SocialMediaName</td>
            <td>@item.Url</td>
            <td>@item.Icon</td>
            <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-danger">Sil</a></td>
            <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-info">Güncelle</a></td>
        </tr>
        }
    </tbody>
</table>
<a href="/SocialMedia/AddSocialMedia" class="btn btn-warning mt-3">Ekle</a>