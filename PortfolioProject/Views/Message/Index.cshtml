@model List<PortfolioProject.Models.TblMessages>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-3">Mesajlar</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>İsim Soyisim</th>
        <th>Mail</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Subject</td>
                <td>@item.MessageContent</td>

                <td><a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Message/UpdateMessage/@item.MessageId" class="btn btn-outline-info">Güncelle</a></td>


            </tr>
        }
    </tbody>
</table>