@model List<PortfolioProject.Models.TblExperiences>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-3">Experiences</h3>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlangıç Yılı</th>
        <th>Bitiş Yılı</th>
        <th>Görev</th>
        <th>Açıklama</th>
        <th>Şirket</th>
        <th>Lokasyon</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ExperienceId</td>
                <td>@item.StartYear</td>
                <td>@item.EndYear</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Company</td>
                <td>@item.Location</td>
                <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-outline-info">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Experience/AddExperience" class="btn btn-outline-warning">Yeni Ekle</a>


