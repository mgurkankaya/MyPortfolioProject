@model List<PortfolioProject.Models.TblContacts>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-3">Contact Page</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>İsim Soyisim</th>
        <th>Adres</th>
        <th>Telefon</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NameSurname</td>
                <td>@item.Adress</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
               
                <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-info">Güncelle</a></td>


            </tr>
        }
        </tbody>
</table><a href="/Contact/AddContact" class="btn btn-outline-primary mt-3">İletişim Ekle</a>

