@model PortfolioProject.Models.TblContacts
@{
    ViewBag.Title = "UpdateContact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-3">Update Contact</h3>

<form method="post">
    <input type="hidden" name="ContactId" value="@Model.ContactId" />

    <label>İsim Soyisim</label>
    <input name="NameSurname" class="form-control" value="@Model.NameSurname" />

    <label>Adres</label>
    <input name="Adress" class="form-control" value="@Model.Adress" />

    <label>Telefon</label>
    <input name="Phone" class="form-control" value="@Model.Phone" />

    <label>Mail</label>
    <input name="Email" class="form-control" value="@Model.Email" />

    <button class="btn btn-outline-success mt-2">Güncelle</button>
</form>