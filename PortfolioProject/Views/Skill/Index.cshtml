@model List<PortfolioProject.Models.TblSkills>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-3">Index</h3>

<table class="table table-bordered table-hover">
    <thead class="bg-dark text-danger">
        <tr>
            <th>Skill Name</th>
            <th>Value</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody class="table-hover ">
        @foreach (var item in Model)
        {
            <tr >
                <td>@item.SkillName</td>
                <td>@item.Value</td>
                <td><a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-outline-info">Güncelle</a></td>
            </tr>
        }

    </tbody>
</table>
<a href="/Skill/AddSkill" class="btn btn-outline-warning mt-3">Yeni Ekle</a>