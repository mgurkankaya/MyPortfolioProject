@model List<PortfolioProject.Models.TblServices>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-3">Services</h3>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>İkon</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Aktif</th>
        <th>Pasif</th>

    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ServiceId</td>
                <td>@item.Icon</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@(item.Status==true ? "Aktif" : "Pasif")</td>
                <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-outline-info">Güncelle</a></td>
                <td><a href="/Service/MakeActive/@item.ServiceId" class="btn btn-outline-success">+</a></td>
                <td><a href="/Service/MakePassive/@item.ServiceId" class="btn btn-outline-secondary">-</a></td>
            </tr>
        }
    </tbody>
</table>
<br />

<a href="/Service/AddService" class="btn btn-outline-warning">Yeni Ekle</a>