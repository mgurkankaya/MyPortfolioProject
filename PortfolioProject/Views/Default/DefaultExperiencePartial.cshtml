@model List<PortfolioProject.Models.TblExperiences>
@{
    int count = 0;
    string cssSagSolSlide = "slideInRight";
    string cssSagSol = "right";
}
<div class="experience" id="experience">
    <div class="container">
        <header class="section-header text-center wow zoomIn" data-wow-delay="0.1s">
            <p>Özgeçmişim</p>
            <h2>Çalışma Deneyimleri</h2>
        </header>
        @foreach (var item in Model)
        {
            count++;
            if (count % 2 == 0)
            {
                cssSagSolSlide = "slideInRight";
                cssSagSol = "right";
            }
            else
            {
                cssSagSol = "left";
                cssSagSolSlide = "slideInLeft";
            }
            <div class="timeline">
                <div class="timeline-item @cssSagSol wow @cssSagSolSlide" data-wow-delay="0.1s">

                    
                    <div class="timeline-text">

                        <div class="timeline-date">@item.StartYear - @item.EndYear</div>
                        <h2>@item.Title</h2>
                        <h4>@item.Company - @item.Location</h4>
                        <p>
                            @item.Description
                        </p>
                    </div>
                  
                </div>
            </div>
        }
        </div>
</div>