@model PortfolioProject.Models.TblExperiences
@{
    ViewBag.Title = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-3">Add Experience</h3>

<form method="post">
    <label>Başlangıç Yılı</label>
    <input type="text" name="StartYear" class="form-control" />
    <label>Bitiş Yılı</label>
    <input type="text" name="EndYear" class="form-control" />
    <label>Görev</label>
    <input type="text" name="Title" class="form-control" />
    <label>Açıklama</label>
    <input type="text" name="Description" class="form-control" />
    <label>Şirket</label>
    <input type="text" name="Company" class="form-control" />
    <label>Lokasyon</label>
    <input type="text" name="Location" class="form-control" />

    <button class="btn btn-outline-primary mt-2">Kaydet</button>
</form>

