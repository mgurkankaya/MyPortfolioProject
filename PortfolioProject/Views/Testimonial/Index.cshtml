@model List<PortfolioProject.Models.TblTestimonials>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-3">Referanslarım</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Görsel Url:</th>
            <th>Yorum</th>
            <th>İsim Soyisim</th>
            <th>Başlık</th>
            <th>Statü</th>
            <th>Yorum Tarihi</th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.ImageUrl</td>
                <td>@item.Comment</td>
                <td>@item.NameSurname</td>
                <td>@item.Title</td>
                <td>@item.Status</td>
                <td>@item.CommentDate</td>
                <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-info">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Testimonial/AddTestimonial" class="btn btn-outline-warning mt-3">Yeni Ekle</a>